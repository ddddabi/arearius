<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--상단 고정-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/ouricon"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="App Info"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:fontFamily="@font/nanumgothicextrabold" />
    <ImageView
        android:id="@+id/appicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="13dp"
        />
    <TextView
        android:id="@+id/appnametitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appicon"
        android:fontFamily="@font/nanumgothicbold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textSize="20sp"/>

    <!--스크롤 뷰-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="24dp"
                android:text="@string/apkname"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/applabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/apk"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />

            <TextView
                android:id="@+id/pack_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/applabel"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="@string/package_name"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack_name"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/package_name"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="@string/version"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />


            <TextView
                android:id="@+id/permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version_name"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="@string/permissions"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/req_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/permissions"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />

            <TextView
                android:id="@+id/path_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/req_permission"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:text="@string/path_info"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/path_info"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />

            <TextView
                android:id="@+id/md5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/path"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="MD5"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/md5Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/md5"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />
            <TextView
                android:id="@+id/sha1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/md5Label"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="SHA-1"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sha1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sha1"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />
            <TextView
                android:id="@+id/sha256"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sha1Label"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="SHA-256"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sha256Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sha256"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />
            <TextView
                android:id="@+id/installed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sha256Label"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:text="@string/installed"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/installed"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp"  />

            <TextView
                android:id="@+id/modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/insdate"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:text="@string/modified"
                android:fontFamily="@font/nanumgothic"
                android:textColor="@color/blue"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/modified"
                android:fontFamily="@font/nanumgothiclight"
                android:textColor="@color/black"
                android:paddingLeft="24dp" />
        </RelativeLayout>

    </ScrollView>

    <!--하단 고정-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btntotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="VirusTotal"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btnmeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/button_back"
            android:fontFamily="@font/nanumgothicextrabold"
            android:text="MetaDefender Cloud"
            android:textAllCaps="false"/>

    </LinearLayout>
</LinearLayout>


